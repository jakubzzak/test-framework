{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2022", "ES6"],
    "module": "CommonJS",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "allowJs": true,
    "baseUrl": "./",
    "outDir": ".build",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "paths": {
      "examples/*": ["./examples/*"],
      "test-framework/*": ["./src/*"],
      "domains/*": ["./src/domain/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["node_modules", ".build"]
}
